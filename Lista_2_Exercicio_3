#include<stdio.h>

int main(){
	
	int naipe, valor;
	
	printf("Escolha o Naipe:\n");
	printf("1 - ouros, 2 - copas, 3 - paus, 4 - espadas: \n");
	scanf("%i", &naipe);
	
	if(naipe == 1){
		naipe == "ouros";
	}
	
	if(naipe == 2){
		naipe == "copas";
	}
	
	if(naipe == 3){
		naipe == "paus";
	}
	
	if(naipe == 4){
		naipe == "espadas";
	}
	
	printf("Escolha um Valor: \n");
	printf("1 - as, 2 - dois, 3 - tres, 4 - quatro, 5 - cinco, 6 - seis, 7 - sete, 8 - oito, 9 - nove, 10 - dez, 11 - valete, 12 - dama, 13 - rei\n");
	scanf("%i", &valor);
	
	if(valor == 1){
		valor == "as";
	}
	
	if(valor == 2){
		valor == "dois";
	}
	
	if(valor == 3){
		valor == "tres";
	}
	
	if(valor == 4){
		valor == "quatro";
	}
	
	if(valor == 5){
		valor == "cinco";
	}
	
	if(valor == 6){
		valor == "seis";
	}
	
	if(valor == 7){
		valor == "sete";
	}
	
	if(valor == 8){
		valor == "oito";
	}
	
	if(valor == 9){
		valor == "nove";
	}
	
	if(valor == 10){
		valor == "dez";
	}
	
	if(valor == 11){
		valor == "valete";
	}
	
	if(valor == 12){
		valor == "dama";
	}
	
	if(valor == 13){
		valor == "rei";
	}
	
	printf("VocÃª escolheu a carta %i de %i \n", valor, naipe);
}
