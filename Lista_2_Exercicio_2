#include<stdio.h>
int main (){
	
	char jg1[60], jg2[60];
	int op1, op2;
	
	printf("---------JojenPo----------\n");
	
	//Jogador 1
	printf("Nome Jogador 1: \n");
	scanf("%s", jg1);
	
	printf("1 - Pedra, 2 - Papel e 3 - Tesoura:\n");
	scanf("%d", &op1);
	
	// Condição de Erro - Caso escolher um numeo menor que 0 e maior que 3
	if(op1<1 || op1>3){
		printf("ERRO - Escolha Numeros de 0 a 3 \n");
		exit(0);
	}
	
	printf("--------------------------\n");
	
	//Jogador 2
	printf("Nome Jogador 2: \n");
	scanf("%s", jg2);
	
	printf("1 - Pedra, 2 - Papel e 3 - Tesoura:\n");
	scanf("%d", &op2);
	
	printf("\n");
	printf("Vencedor: \n\n");
	
	
	//Condições do Vencedor
	if(op1 == 1 && op2 == 1){
		printf("Empate");
	}
	if(op1 == 1 && op2 == 2){
		printf("Jogador 2 %s Ganhou", jg2);
	}
	if(op1 == 1 && op2 == 3){
		printf("Jogador 1 %s Ganhou", jg1);
	}
	
	if(op1 == 2 && op2 == 1){
		printf("Jogador 1 %s Ganhou", jg1);
	}
	if(op1 == 2 && op2 == 2){
		printf("Empate");
	}
	if(op1 == 2 && op2 == 3){
		printf("Jogador 2 %s Ganhou", jg2);
	}
	
	if(op1 == 3 && op2 == 1){
		printf("Jogador 2 %s Ganhou", jg2);
	}
	if(op1 == 3 && op2 == 2){
		printf("Jogador 1 %s Ganhou", jg1);
	}
	if(op1 == 3 && op2 == 3){
		printf("Empate");
	}
	
	return 0;
}
